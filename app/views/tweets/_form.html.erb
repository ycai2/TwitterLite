<h2>New Tweet!</h2>
<form action="/tweets" class="tweet-compose" method="POST" data-tweets-ul="#feed">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]"></textarea>
  </label>
  <br>


  <label>
    <script type="text/template">
      <div class="">
        <select name="tweet[mentioned_user_ids][]">
        <option></option>
        <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.username %></option>
        <% end %>
        </select>
        <a href="javascript:void(0)" class="remove-mentioned-user">X</a>
      </div>
    </script>
    <a href="javascript:void(0)" class="add-mentioned-user">Add mention</a>
    <div class="mentioned-users"></div>
  </label>

  <br>
  <strong class="chars-left">140</strong>
  <input type="submit" value="Post Tweet!">
</form>
